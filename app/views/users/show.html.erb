<section >
  <div class='row'>
    <div class='mt-3 col-8'>
      <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true"><%= "Created Events (#{@user.events.count})" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false"><%= "Past Events (#{@user.past_events.count})" %></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" id="contact-tab" data-toggle="tab" href="#contact" role="tab" aria-controls="contact" aria-selected="false"><%= "Live Events (#{ @user.live_events.count})" %></a>
        </li>
      </ul>
      <div class="content bg-light">
        <div class="tab-content" id="myTabContent">
          <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
            <%= render partial: 'events/event_display', locals: {events: @user.events}  %>
          </div>
          <div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <%= render partial: 'events/event_display', locals: {events: @user.past_events}  %>
          </div>
          <div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
            <%= render partial: 'events/event_display', locals: {events: @user.live_events}  %>
          </div>
        </div>
      </div>
    </div>
    <div class="col-4 mt-3">
      <div class='justify-content-start btn-group' >
        <button class="btn btn-outline-primary">Follow</button>
      </div>
      <div class="title">

      </div>
      <hr class="my-r">
      <div class=" container bg-light" >

      </div>
    </div>
  </div>
</section>
