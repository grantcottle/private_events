<div class="row text-center justify-content-center">
  <div class='col-sm-3 my-5'>
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form_signin') do |f| %>
      <h2 class="h3 mb-3 font-weight-normal">Sign up</h2>
      <%= f.error_notification %>
      <%= f.input :username,
        required: true,
        autofocus: true,
        label: false,
        input_html: { autocomplete: "username", class: "form-control m-2", placeholder: "Username" } %>
      <%= f.input :avatar,
          required: false,
          label: 'Profile Photo',
          input_html: { autocomlete: "avatar", class: 'form-control m-2'} %>

      <%= f.input :email,
        required: true,
        label: false,
        input_html: {autocomplete: "email", class: "form-control m-2", placeholder: "Email"} %>

      <%= f.input :password,
        required: true,
        label: false,
        hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
        input_html: {autocomplete: "password", class: "form-control m-2", placeholder: "Password"} %>

      <%= f.input :password_confirmation,
        required: true,
        label: false,
        input_html: { autocomplete: 'new-password', class: 'form-control m-2', placeholder: "Password Confirmation"} %>
      <%= f.button :submit, "Sign up", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
