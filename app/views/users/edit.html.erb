<div class="row text-center justify-content-center">
  <div class='col-sm-5 my-5'>
    <%= simple_form_for(@user , class: 'form') do |f| %>
      <h2 class="h3 mb-3 font-weight-normal">Sign up</h2>
      <%= f.error_notification %>
      <div class="form-group">
        <div class="row">
          <div class="col-lg-4">
            <%= image_tag user_avatar(@user), class: 'img-fluid img-thumbnail'%>
          </div>

          <div class='col-lg-8'>
            <%= f.input :avatar,
              as: :file,
              input_html: { class: 'form-control m-2'} %>
          </div>
        </div>
      </div>
      <%= f.input :username,
        required: true,
        autofocus: true,
        label: false,
        input_html: { autocomplete: "username", class: "form-control m-2", placeholder: "Username" } %>

      <%= f.input :email,
        required: true,
        label: false,
        input_html: {autocomplete: "email", class: "form-control m-2", placeholder: "Email"} %>

      <%= f.button :submit, "Submit", class: "btn btn-lg btn-primary btn-block" %>
    <% end %>
  </div>
</div>
